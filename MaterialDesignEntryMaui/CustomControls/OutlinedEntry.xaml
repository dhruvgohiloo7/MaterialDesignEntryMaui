<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialDesignEntryMaui.CustomControls.OutlinedEntry"
             xmlns:cc ="clr-namespace:MaterialDesignEntryMaui.CustomControls"
             x:Name="this">

    <Border x:Name="border" StrokeThickness="1" Stroke="LightGray" Padding="10,0">
        <cc:BorderlessEntry x:Name="BlEntry" Text="{Binding Source = {x:Reference this},Path=Text}" FontSize="{Binding Source={x:Reference this},Path=FontSize}" Focused="BlEntry_Focused" Unfocused="BlEntry_Unfocused"/>
    </Border>
        <Label x:Name="LblPlaceholder" Text="{Binding Source={x:Reference this},Path=Placeholder}" FontSize="{Binding Source={x:Reference this},Path=FontSize}" TextColor="LightGray" VerticalOptions="Center" Margin="10,0" Padding="2,0" HorizontalOptions="Start" BackgroundColor="White"/>
</Grid>
